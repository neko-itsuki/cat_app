<%= link_to(dog_path(dog), class: "link") do %>
  <div class="animal">
    <%= attachment_image_tag dog, :dog_image, format: 'jpeg', size: "150x150" %><br>
    <%= dog.dog_name %><br>
    <%= dog.dog_age %>/
    <% if dog.dog_gender %>
      オス/
    <% else %>
      メス/
    <% end %>
    <%= dog.dog_type %><br>
    <%= t('address.state')[dog.center.prefecture_code - 1] %><br>
    <% if current_center == dog.center %>
      <%= link_to '編集', edit_dog_path(dog) %>
      <%= link_to '削除', dog_path(dog), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
<% end %>