<h2>動物保護施設 新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/centers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :name, "病院名" %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :furigana_name, "病院名（ふりがな）" %><br />
    <%= f.text_field :furigana_name %>
  </div>
  
  <div class="field">
    <%= f.label :director_name, "院長名" %><br />
    <%= f.text_field :director_name %>
  </div>
  
  <div class="field">
    <%= f.label :staff_name, "担当者名" %><br />
    <%= f.text_field :staff_name %>
  </div>
  
  <div class="field">
    <%= f.label :postcode, '郵便番号' %>
    <%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control' %>
    
    <%= f.label :prefecture_code, '都道府県' %>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %>
    
    <%= f.label :address_city, '市区町村' %>
    <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control' %>
    
    <%= f.label :address_street, '番地' %>
    <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control' %>
    
    <%= f.label :address_building, '建物' %>
    <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :tel, "電話番号" %><br />
    <%= f.text_field :tel %>
  </div>
  
  <div class="field">
    <%= f.label :approval, "この企画に賛同していただけますか？" %>
    <%= f.check_box :approval, :as => :boolean, checked:false %>
  </div>
  
  <div class="field">
    <%= f.label :release, "病院の情報をホームページに公開してよろしいですか？" %>
    <%= f.check_box :release, :as => :boolean, checked:false %>
  </div>
  
  <div class="field">
    <%= f.label :listok, "賛同動物病院一覧に記載してよろしいですか？" %>
    <%= f.check_box :listok, :as => :boolean, checked:false %>
  </div>
  
  <div class="field">
    <%= f.label :care_time, "診療時間" %><br />
    <%= f.text_field :care_time %>
  </div>
  
  <div class="field">
    <%= f.label :close_date, "休診日" %><br />
    <%= f.text_field :close_date %>
  </div>
  
  <div class="field">
    <%= f.label :acces, "アクセス方法" %><br />
    <%= f.text_field :acces %>
  </div>
  
  <div class="field">
    <%= f.label :url, "WebサイトURL" %><br />
    <%= f.text_field :url %>
  </div>
  
  <div class="field">
    <%= f.label :director_word, "ひとこと" %><br />
    <%= f.text_field :director_word %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/centers/shared/links" %>
