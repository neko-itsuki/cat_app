<h2><%= current_user.id %>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :furigana_name, "ふりがな" %><br />
    <%= f.text_field :furigana_name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :age, "年齢" %><br />
    <%= f.number_field :age %>
  </div>
  
  <div class="field">
    <%= f.label :postcode, '郵便番号' %>
    <%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control' %>
    
    <%= f.label :prefecture_code, '都道府県' %>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %>
    
    <%= f.label :address_city, '市区町村' %>
    <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control' %>
    
    <%= f.label :address_street, '番地' %>
    <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control' %>
    
    <%= f.label :address_building, '建物' %>
    <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :tel, "電話番号" %><br />
    <%= f.text_field :tel %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "プロフィール更新" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
