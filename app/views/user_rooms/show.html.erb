<div>Userチャットルームの詳細</div>
<%= @user_room.center.name %>
<% if @user_room.cat %>
  <%= @user_room.cat.cat_name %>
<% else @user_room.dog %>
  <%= @user_room.dog.dog_name %>
<% end %>
<% if @user_messages.blank? %>
  <p>メッセージはありません</p>
<% else%>
  <p>メッセージがあります</p>
  <% @user_messages.each do |message| %>
    <div>
      <% if message.user %>
        <p style="text-align: right;"><%= message.user.name %>:<%= message.user_message %></p>
      <% else %>
        <p style="text-align: left;"><%= message.user_message %>:<%= message.center.name %></p>
      <% end %>
    </div>
  <% end %>
<% end %>
<%= form_with model: @user_message, url: user_message_path, local: true do |f| %>
  <%= f.text_field :user_message, class:"address-new-form" %>
  <%= f.hidden_field :user_room_id, value: @user_room.id %>

  <%= f.submit "送信", class:"register-green-btn" %>
<% end %>
