<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <h1><%= yield(:title) %></h1>
        <% if user_signed_in? %>
          <li><strong><%= link_to current_user.email, home_path %></strong></li>
          <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
          <li><%= link_to '里親希望者ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <!--<li><%= link_to 'サインアップ', new_user_registration_path %></li>-->
          <li><%= link_to '里親希望者ログイン', new_user_session_path %></li>
        <% end %>
        <% if foster_parent_recruiter_signed_in? %>
          <li><strong><%= link_to "edit", edit_foster_parent_recruiter_registration_path %></strong></li>
          <li><%= link_to 'プロフィール変更', edit_foster_parent_recruiter_registration_path %></li>
          <li><%= link_to '里親募集者ログアウト', destroy_foster_parent_recruiter_session_path, method: :delete %></li>
        <% else %>
          <!--<li><%= link_to 'サインアップ', new_foster_parent_recruiter_registration_path %></li>-->
          <li><%= link_to '里親募集者ログイン', new_foster_parent_recruiter_session_path %></li>
        <% end %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
